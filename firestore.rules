rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function para verificar si el usuario es admin
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    // Helper function para verificar si el usuario es el due침o del documento
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Reglas para paintings
    match /paintings/{paintingId} {
      // Cualquiera puede leer las pinturas
      allow read: if true;

      // Solo administradores pueden escribir/actualizar/eliminar
      allow create, update, delete: if isAdmin();
    }

    // Reglas para custom orders (obras a pedido)
    match /customOrders/{orderId} {
      // Cualquiera puede crear pedidos personalizados
      allow create: if true;

      // Cualquiera puede leer (para que los usuarios vean sus propios pedidos)
      allow read: if true;

      // Solo administradores pueden actualizar/eliminar
      allow update, delete: if isAdmin();
    }

    // Reglas para orders (compras normales de pinturas)
    match /orders/{orderId} {
      // Cualquiera puede crear 칩rdenes (usuarios an칩nimos pueden comprar)
      allow create: if true;

      // Lectura: Admin puede ver todas, usuarios solo las suyas
      allow read: if isAdmin() || 
                     (request.auth != null && resource.data.userId == request.auth.uid) ||
                     (request.auth == null && true); // Permite lectura temporal para confirmaci칩n

      // Solo administradores pueden actualizar/eliminar
      allow update, delete: if isAdmin();
    }
  }
}
