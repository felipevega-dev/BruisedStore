rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function para verificar si el usuario es admin
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    // Helper function para verificar si el usuario es el dueño del documento
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Reglas para paintings
    match /paintings/{paintingId} {
      // Cualquiera puede leer las pinturas
      allow read: if true;

      // Solo administradores pueden escribir/actualizar/eliminar
      allow create, update, delete: if isAdmin();
    }

    // Reglas para custom orders (obras a pedido)
    match /customOrders/{orderId} {
      // Cualquiera puede crear pedidos personalizados
      allow create: if true;

      // Cualquiera puede leer (para que los usuarios vean sus propios pedidos)
      allow read: if true;

      // Usuarios pueden actualizar solo para agregar su userId después del registro
      // O administradores pueden actualizar cualquier cosa
      allow update: if isAdmin() || 
                      (request.auth != null && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['userId']) &&
                       request.resource.data.userId == request.auth.uid);

      // Solo administradores pueden eliminar
      allow delete: if isAdmin();
    }

    // Reglas para orders (compras normales de pinturas)
    match /orders/{orderId} {
      // Cualquiera puede crear órdenes (usuarios anónimos pueden comprar)
      allow create: if true;

      // Lectura pública (validación de token se hace en cliente)
      // Esto permite que order-confirmation funcione sin Admin SDK
      allow read: if true;

      // Solo administradores pueden actualizar/eliminar
      allow update, delete: if isAdmin();
    }

    // Reglas para reviews (comentarios y calificaciones)
    match /reviews/{reviewId} {
      // Lectura: Todos ven aprobadas, usuarios ven las suyas, admins ven todas
      allow read: if resource.data.approved == true || 
                     (request.auth != null && resource.data.userId == request.auth.uid) ||
                     isAdmin();

      // Usuarios autenticados pueden crear reseñas
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.approved == false; // Siempre empiezan sin aprobar

      // Solo administradores pueden actualizar/eliminar (para moderar)
      allow update, delete: if isAdmin();
    }

    // Reglas para wishlist (lista de deseos)
    match /wishlist/{wishlistId} {
      // Usuarios pueden leer su propia wishlist
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;

      // Usuarios pueden crear items en su wishlist
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Usuarios pueden eliminar items de su wishlist
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // Admins pueden ver y gestionar todas las wishlists
      allow read, update, delete: if isAdmin();
    }

    // Reglas para coupons (cupones de descuento)
    match /coupons/{couponId} {
      // Todos pueden leer cupones (para validar en checkout)
      allow read: if true;

      // Solo administradores pueden crear/actualizar/eliminar
      allow create, update, delete: if isAdmin();
    }

    // Reglas para homeSettings (configuración de la página principal)
    match /homeSettings/{settingsId} {
      // Todos pueden leer la configuración del home
      allow read: if true;

      // Solo administradores pueden crear/actualizar configuración
      allow create, update: if isAdmin();

      // Solo administradores pueden eliminar (no recomendado)
      allow delete: if isAdmin();
    }

    // Reglas para blogPosts (sistema de blog)
    match /blogPosts/{postId} {
      // Lectura: Todos pueden ver posts publicados, admins ven todos
      allow read: if resource.data.published == true || isAdmin();

      // Solo administradores pueden crear posts
      allow create: if isAdmin() &&
                       request.resource.data.authorId == request.auth.uid;

      // Solo administradores pueden actualizar posts
      allow update: if isAdmin();

      // Solo administradores pueden eliminar posts
      allow delete: if isAdmin();
    }

    // Reglas para musicSettings (configuración de música de fondo)
    match /musicSettings/{settingsId} {
      // Todos pueden leer la configuración de música
      allow read: if true;

      // Solo administradores pueden crear/actualizar configuración
      allow create, update: if isAdmin();

      // Solo administradores pueden eliminar (no recomendado)
      allow delete: if isAdmin();
    }

    // Reglas para generalSettings (configuración general del sitio)
    match /generalSettings/{settingsId} {
      // Todos pueden leer configuración general (para datos de transferencia, colores, etc.)
      allow read: if true;

      // Solo administradores pueden crear/actualizar
      allow create, update: if isAdmin();

      // Solo administradores pueden eliminar
      allow delete: if isAdmin();
    }

    // Reglas para adminLogs (logs de actividad de administradores)
    match /adminLogs/{logId} {
      // Solo administradores pueden leer logs
      allow read: if isAdmin();

      // Solo el sistema puede crear logs (a través de Cloud Functions o código cliente)
      // Los admins también pueden crear logs desde el cliente
      allow create: if isAdmin();

      // Nadie puede actualizar o eliminar logs (inmutables)
      allow update, delete: if false;
    }
  }
}
